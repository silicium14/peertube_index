    color: black;
}
@media (min-width: 900px) {
    .aboutSection {
        width: 768px;
    }
}
.aboutSection:target {
    color: white;
    background-color: #333333;
}
.aboutSection:target a {
    color: white;
}
.reportForm .reportForm-item:first-of-type {
    margin-top: 0;
}
.reportForm {
    max-width: 500px;
}
.reportForm-item {
    margin-top: 20px;
}
.reportForm-inputWithLabel {
    display: block;
    font-size: medium;
    box-sizing: border-box;
    width: 100%;
